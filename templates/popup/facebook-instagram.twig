<div class="modal fade" id="follow-us" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">{{ 'popup.title'|trans({}) }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">{{ 'popup.followus'|trans({}) }}</div>
                </div>
                <div class="row">
                    <div class="col-md-6 text-center"><a href=""><i class="fab fa-facebook-square fa-7x"></i></a></div>
                    <div class="col-md-6 text-center"><a href=""><i class="fab fa-instagram fa-7x"></i></a></div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="row">
                    <div class="col-md-12">
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                            {{ 'popup.goodbye'|transchoice(1, {'username' : user.username})|raw }}
                        {% else %}
                            <a href="{{ path('welcome') }}">{{ 'popup.register'|trans({}) }}</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>