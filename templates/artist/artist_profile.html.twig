{% if artist %}

    {% if artist.avatarName is not empty %}
        <img src="{{ vich_uploader_asset(artist, 'avatarFile') | imagine_filter('thumb_small_square') }}" alt="" class="img-fluid">
    {% endif %}

    <div class="user-profile">
        {% if artist.websiteLink %}
            <p><i class="fas fa-globe m-2 fa-2x align-middle"></i><a href="{{ artist.websiteLink }}" target="_blank">{{ artist.websiteLink }}</a></p>
        {% endif %}
        {% if artist.instagramLink %}
            <p><i class="fab fa-instagram m-2 fa-2x align-middle"></i><a href="{{ artist.instagramLink }}" target="_blank">{{ artist.instagramLink }}</a></p>
        {% endif %}
    </div>
{% endif %}