<div class="sa-jumbotron">
    <img src="/assets/img/beta_ribbon.png" id="beta_ribbon">

    <div class="sa-jumbotron-inner">
        <div class="container">
            <div id="jumbotron" class="carousel slide carousel-fade" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#jumbotron" data-slide-to="0" class="active"></li>
                    <li data-target="#jumbotron" data-slide-to="1"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <div class="carousel-caption">
                            <h1>{{ 'home.title.first'|trans({}) }}</h1>
                            <p>{{ 'home.description.first'|trans({}) }}</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <div class="carousel-caption">
                            <h1>{{ 'home.title.second'|trans({}) }}</h1>
                            <p>{{ 'home.description.second'|trans({}) }}</p>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#jumbotron" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#jumbotron" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>