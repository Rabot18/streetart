{% extends 'base.html.twig' %}

{% set isCreateForm = form.vars.data.id|default(false) ? false : true %}

{% form_theme form _self %}

{% block body %}
    <div class="page-artwork-edit">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-12">
                    <div class="card mt-5">
                        <article class="card-body p-5">
                            <h2 class="card-title mb-4 mt-1 text-center">
                                {% if isCreateForm %}
                                    {{ 'artwork.title.create'|trans({}, 'messages') }}
                                {% else %}
                                    {{ 'artwork.title.edit'|trans({}, 'messages') }}
                                {% endif %}
                            </h2>

                            {{ form_start(form, { attr: { novalidate: 'novalidate' }}) }}
                            {{ form_errors(form) }}

                            {{ form_row(form.title) }}
                            {{ form_row(form.poi) }}

                            {{ form_row(form.documents, { attr: { class: 'row' }}) }}

                            <a href="#" class="add_document_link">{{ 'artwork.link.add_a_document'|trans({}, 'messages') }}</a>

                            {{ form_rest(form) }}

                            <div class="text-center">
                                <button type="submit" class="btn btn-block btn-primary">{{ 'artwork.button.save'|trans({}, 'messages') }}</button>
                            </div>

                            {{ form_end(form) }}
                        </article>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block _artwork_documents_entry_row %}
    {% set document = form.vars.data %}

    <div class="item-document col-6">
        {{ form(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('build/js/artwork-edit.js') }}"></script>
{% endblock %}