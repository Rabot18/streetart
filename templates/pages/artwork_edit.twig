{% extends 'base.html.twig' %}

{% block body %}
    <div class="page-artwork-edit">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 col-12">
                    <div class="card mt-5">
                        <article class="card-body p-5">
                            <h2 class="card-title mb-4 mt-1 text-center">{{ 'page.artwork_create.title'|trans({}, 'messages') }}</h2>

                            {{ form_start(form) }}

                            {{ form_row(form.title) }}
                            {{ form_row(form.poi) }}

                            {{ form_label(form.documents) }}
                            <ul class="documents" data-prototype="{{ form_widget(form.documents.vars.prototype)|e('html_attr') }}">
                                    {# iterate over each existing tag and render its only field: name #}
                                    {% for document in form.documents %}
                                        <li>{{ form_row(document) }}</li>
                                    {% endfor %}
                            </ul>
                            <a href="#" class="add_document_link">Add a document</a>

                            {{ form_rest(form) }}

                            <div class="text-center">
                                <button type="submit" class="btn btn-block btn-primary">Enregistrer</button>
                            </div>

                            {{ form_end(form) }}
                        </article>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('build/js/artwork-edit.js') }}"></script>
{% endblock %}