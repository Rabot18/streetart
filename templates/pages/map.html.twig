{% extends 'base_without_body.html.twig' %}

{% block title %}{{ 'title.map'|trans({},'Metas') }}{% endblock %}
{% block metas %}
    <meta name="description" content="{{ 'description.map'|trans({},'Metas') }}" />
{% endblock %}
{% block body_classes %}page-map{% endblock body_classes %}

{% block body %}
    <div id="map" class="content-map">
        <div id="map_menu">
            <div id="showaround"></div>
            <a href="{{ path('home') }}" class="btn btn-primary my-2">{{ 'map.backwebsite'|trans({}) }}</a>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
      window.datas = '{{ pois | raw | escape('js') }}';
      const translations = {
          'aroundme' : '{{ 'map.aroundme' | trans }}',
          'showartwork' : '{{ 'map.showartwork' | trans }}'
      }
    </script>

    <script src="{{ asset('build/js/map.js') }}"></script>
{% endblock %}