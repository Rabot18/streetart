{% extends 'base.html.twig' %}

{% block body_classes %}page-home{% endblock body_classes %}

{% block body %}

    <main role="main">

        {% include "components/jumbotron.html.twig" %}

        <section class="section section-lg section-places">
            <div class="container">
                <div class="row">
                    <div class="col-4">
                        {% include "components/card-block.twig" with { title: 'Nantes', introduction: 'Fresqu\'île au hangar à bananes', imgSrc: asset('assets/img/hangar-bananes.png'), link: '/blog/1w99PSuxAcMssEGU0AE2i2', linkDisplay: 'En savoir plus'} %}
                    </div>
                    <div class="col-4">
                        {% include "components/card-block.twig" with { title: 'Berlin', introduction: 'Baiser fraternel socialiste', imgSrc: asset('assets/img/berlin.png'), link: '/blog/39R0RcgHSguAui04Uq46sy', linkDisplay: 'En savoir plus'} %}
                    </div>
                    <div class="col-4">
                        {% include "components/card-block.twig" with { title: 'Bordeaux', introduction: 'Abys Scaf, OSMOZ-COLORS', imgSrc: asset('assets/img/bdx.png'), link: '', linkDisplay: 'En savoir plus'} %}
                    </div>
                </div>
            </div>
        </section>

        <section class="jumbotron text-center">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 d-flex flex-column justify-content-center align-items-center">
                        <h2>We need you !</h2>
                        <p class="lead text-muted">{{ 'home.needyou'|trans({}) }}</p>
                        <a href="{{ path('app_artwork_new') }}" class="btn btn-primary my-2">Soumettre une photo</a>
                    </div>
                    <div class="col-md-6">
                        <p>
                            <img src="/assets/img/needyou.png" alt="needyou" style="width: 70%"/>
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <section class="section">
            <div class="container">
                <h2 class="mb-5 text-center">Preview de la base de données des oeuvres</h2>
                <h3 class="mb-5 text-center">La base contient {{ totalPois }} oeuvres provenant de {{ totalCountry }} pays</h3>
                <div class="row">
                    {% for pois in colPois %}
                        <div class="col-12 col-sm-4">
                            {% for poi in pois %}
                                {% set artwork = poi.artworks.first %}
                                {% set document = artwork.documents.first %}

                                {% include "components/card-artwork.twig" with {
                                    imgSrc: vich_uploader_asset(document, 'imageFile'),
                                    title: artwork.title,
                                    textLeft: poi.city ~ ', ' ~ poi.country,
                                    textRight: artwork.createdAt|date("d/m/Y"),
                                } %}
                            {% endfor %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>
    </main>
{% endblock %}